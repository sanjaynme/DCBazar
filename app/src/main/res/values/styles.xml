<resources>

    <style name="MyFullWidthDialog">
        <!--This removes the padding on the dialog-->
        <!-- <item name="android:windowMinWidthMinor">0dip</item>
         <item name="android:windowMinWidthMajor">0dip</item>
        -->
        <!--Setting window background-->
        <item name="android:windowBackground">@color/color_white_f2f2f2_transparent</item>

        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginLeft">@dimen/et_left_margin</item>
        <item name="android:layout_marginRight">@dimen/et_right_margin</item>
        <item name="android:background">@color/register_edittext_background</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/button_leftright_margin</item>
        <item name="android:layout_marginRight">@dimen/button_leftright_margin</item>
        <!--<item name="android:background">@drawable/register_signup_button</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/signup_edittext_background</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">@dimen/et_right_margin</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/toolbar_title_sixe</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <!--<item name="fontName">@string/font_avenir_black</item>-->
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BackArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:src">@drawable/ic_back_arrow</item>-->
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:src">@drawable/ic_menu</item>-->
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CrossIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:src">@drawable/ic_cross</item>-->
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="EllipsizeEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="Animations">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="fullscreen_dialog" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>

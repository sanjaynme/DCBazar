<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/report_toolbar"
            layout="@layout/layout_toolbar_all" />

        <RelativeLayout
            android:id="@+id/rl_report_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_toolbar"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_feedback_icon"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_report_list"
                android:scaleType="fitCenter"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginStart="@dimen/dimen_15dp" />

            <TextView
                android:id="@+id/tv_report_title"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/report"
                android:textColor="@color/splash_color" />

            <ImageButton
                android:id="@+id/ib_report_settings"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_report_menu"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_report_heading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/rl_report_bar"
            android:background="@color/menu_background">

            <TextView
                android:id="@+id/tv_report_heading"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/report_heading" />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_report_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fl_report_heading"
            android:background="@color/menu_background" />

    </RelativeLayout>

    <include
        android:id="@+id/drawer_report_right"
        layout="@layout/layout_drawer" />
</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/dimen_3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_58px"
        android:orientation="vertical">

        <com.ebpearls.choiceapp.customviews.CapitalizedTextView
            android:id="@+id/tv_opentext_attitudename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_13dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="4"
            android:text="@string/lorem_epsum"
            android:textColor="@color/attitude_title" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_105px">

            <EditText
                android:id="@+id/et_opentext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Enter Text"
                android:inputType="textCapSentences"
                android:paddingLeft="@dimen/dimen_44px"
                android:paddingRight="@dimen/dimen_50dp"
                android:paddingBottom="@dimen/dimen_44px"
                android:paddingTop="@dimen/dimen_44px"
                android:textColorHint="@color/notification_text_color" />

            <ImageView
                android:id="@+id/et_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/et_opentext"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_3dp"
                android:contentDescription="@null"
                android:padding="@dimen/dimen_3dp"
                android:src="@drawable/grey_cross_icon" />


        </RelativeLayout>


        <com.ebpearls.choiceapp.customviews.CapitalizedTextView
            android:id="@+id/tv_opentext_attitudedescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_73px"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="4"
            android:text="@string/lorem_epsum"
            android:textColor="@color/black" />

    </LinearLayout>

</android.support.v7.widget.CardView>
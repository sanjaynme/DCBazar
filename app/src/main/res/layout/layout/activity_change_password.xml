<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlchange_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context="com.ebpearls.choiceapp.loginModule.LoginActivity">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_toolbar"
        android:background="@drawable/ic_background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edittext_bottom_margin"
            android:layout_marginTop="@dimen/dimen_10dp">

            <EditText
                android:id="@+id/et_old_password"
                style="@style/RegisterEditText"
                fontPath="@string/font_sofiapro_light"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_15sp" />

            <ImageView
                android:id="@+id/btn_old_show_hide_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_old_password"
                android:layout_alignRight="@id/et_old_password"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:contentDescription="@null"
                android:padding="@dimen/dimen_10dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edittext_bottom_margin">

            <EditText
                android:id="@+id/et_new_password"
                style="@style/RegisterEditText"
                android:hint="@string/new_password"
                fontPath="@string/font_sofiapro_light"
                android:inputType="textPassword"
                android:textSize="@dimen/text_15sp" />

            <ImageView
                android:id="@+id/btn_new_show_hide_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_new_password"
                android:layout_alignRight="@id/et_new_password"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:contentDescription="@null"
                android:padding="@dimen/dimen_10dp"  />
        </RelativeLayout>






        <!--   <Button
               android:id="@+id/btn_fblogin"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_marginTop="@dimen/dimen_10dp"
               android:text="Connect with facebook" />-->
    </LinearLayout>


    <Button
        android:id="@+id/btn_submitchange_password"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@drawable/background_login_button"
        android:text="@string/submit" />


</RelativeLayout>

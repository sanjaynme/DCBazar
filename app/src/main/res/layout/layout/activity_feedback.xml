<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/feedback"
        layout="@layout/layout_toolbar_all" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/feedback"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">



            <EditText
                android:id="@+id/et_feedback"
                fontPath="@string/font_sofiapro_light"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_250dp"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/et_left_margin"
                android:layout_marginRight="@dimen/et_left_margin"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@drawable/custom_edittext"
                android:gravity="top"
                android:hint="Write feedback..."
                android:maxLength="500" />


        </LinearLayout>
    </ScrollView>



    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_205px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginRight="@dimen/dimen_25dp"
        android:background="@drawable/background_login_button"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_14sp" />


</RelativeLayout>
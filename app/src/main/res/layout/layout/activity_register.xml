<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_register_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_44px"
        android:contentDescription="@null"
        android:minHeight="?attr/actionBarSize"
        android:padding="@dimen/dimen_20dp"
        android:src="@drawable/ic_back_arrow" />

    <!--<include layout="@layout/layout_toolbar" />-->

    <ScrollView
        android:id="@+id/sv_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".signUpModule.activities.SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_facebook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/dimen_139px"
                android:layout_marginLeft="@dimen/button_leftright_margin"
                android:layout_marginRight="@dimen/button_leftright_margin"
                android:layout_marginTop="@dimen/dimen_150px"
                android:background="@drawable/register_continue_button">

                <ImageView
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/fb_icon" />


                <TextView
                    fontPath="@string/font_proxima_nova_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/connectwithfacebook"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_or_youcan"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="@string/information"
                    android:textColor="@color/signup_underline"
                    android:textSize="@dimen/dimen_14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/et_left_margin"
                    android:layout_marginStart="@dimen/et_left_margin"
                    android:layout_toLeftOf="@id/tv_or_youcan"
                    android:layout_toStartOf="@+id/tv_or_youcan"
                    android:background="@color/register_edittext_hint" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/et_left_margin"
                    android:layout_marginRight="@dimen/et_left_margin"
                    android:layout_toEndOf="@id/tv_or_youcan"
                    android:layout_toRightOf="@id/tv_or_youcan"
                    android:background="@color/register_edittext_hint" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_125px"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_firstname"
                    style="@style/RegisterEditText"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_marginBottom="@dimen/edittext_bottom_margin"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName|textCapWords"
                    android:textSize="@dimen/dimen_15sp" />

                <EditText
                    android:id="@+id/et_lastname"
                    style="@style/RegisterEditText"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_marginBottom="@dimen/edittext_bottom_margin"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName|textCapWords"
                    android:textSize="@dimen/dimen_15sp" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/RegisterEditText"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_marginBottom="@dimen/edittext_bottom_margin"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/dimen_15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edittext_bottom_margin">

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/RegisterEditText"
                        fontPath="@string/font_sofiapro_light"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/dimen_15sp" />

                    <ImageView
                        android:id="@+id/iv_show_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/et_password"
                        android:layout_alignRight="@id/et_password"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:layout_marginRight="@dimen/dimen_8dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_10dp"  />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_terms"
                fontPath="@string/font_sofiapro_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/et_left_margin"
                android:layout_marginRight="@dimen/et_left_margin"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dimen_10dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/signup_underline"
                android:textSize="@dimen/terms_textsize" />

            <Button
                android:id="@+id/btn_signup"
                style="@style/Button"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/sign_up" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>


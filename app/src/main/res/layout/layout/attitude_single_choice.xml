<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_58px"
        android:orientation="vertical">

        <com.ebpearls.choiceapp.customviews.CapitalizedTextView
            android:id="@+id/tv_singlechoice_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dimen_73px"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="@string/lorem_epsum"
            android:textColor="@color/attitude_title" />

        <RadioGroup
            android:id="@+id/rg_two_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_58px"
            android:layout_marginLeft="@dimen/dimen_58px"
            android:layout_marginRight="@dimen/dimen_58px"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="@dimen/dimen_12sp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_yes_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_radiobotton" />

                <com.ebpearls.choiceapp.customviews.CapitalizedTextView
                    android:id="@+id/tv_yes_two"
                    fontPath="@string/font_proxima_nova_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/lorem_epsum"
                    android:textColor="#ff8539"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_58px"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_no_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_radiobotton" />

                <com.ebpearls.choiceapp.customviews.CapitalizedTextView
                    android:id="@+id/tv_no_two"
                    fontPath="@string/font_proxima_nova_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@string/lorem_epsum"
                    android:textColor="#ff8539"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>
        </RadioGroup>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_99px"
            android:layout_marginLeft="@dimen/dimen_spinner_leftmargin" />

        <com.ebpearls.choiceapp.customviews.CapitalizedTextView
            android:id="@+id/tv_singlechoice_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center_horizontal"
            android:text="text" />
    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_14dp"
    android:paddingTop="@dimen/dimen_7dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/alert_min_width"
        android:padding="@dimen/alert_padding"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/splash_color"
        android:textSize="@dimen/dimen_16sp" />

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/alert_padding_top"
        android:paddingLeft="@dimen/alert_padding"
        android:paddingRight="@dimen/alert_padding"
        android:paddingTop="@dimen/alert_padding_top"
        android:textColor="@color/alert_message_color"
        android:textSize="@dimen/dimen_14sp"
        tools:text="Verification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/splash_color"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_56dp"
            android:paddingRight="@dimen/dimen_56dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp" />
    </LinearLayout>
</LinearLayout>
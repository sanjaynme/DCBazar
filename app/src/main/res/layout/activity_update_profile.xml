<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/signup_underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/signup_edittext_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_first_name"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:height="@dimen/et_height"
                    android:background="@color/signup_edittext_background"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/dimen_3dp"
                    android:paddingRight="@dimen/dimen_3dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/faint_white"
                    android:textSize="@dimen/dimen_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <EditText
                    android:id="@+id/et_last_name"

                    fontPath="@string/font_sofiapro_light"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:height="@dimen/et_height"
                    android:background="@color/signup_edittext_background"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/dimen_3dp"
                    android:paddingRight="@dimen/dimen_3dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/faint_white"
                    android:textSize="@dimen/dimen_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <EditText
                    android:id="@+id/et_email"
                    fontPath="@string/font_sofiapro_light"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:height="@dimen/et_height"
                    android:background="@color/signup_edittext_background"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dimen_3dp"
                    android:paddingRight="@dimen/dimen_3dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/faint_white"
                    android:textSize="@dimen/dimen_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_age"
                        style="@style/Spinner"
                        android:layout_height="@dimen/et_height"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/iv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/spinner_right_margin"
                        android:layout_marginRight="@dimen/spinner_right_margin"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_12dp"
                        android:src="@drawable/ic_next_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_gender"
                        style="@style/Spinner"
                        android:layout_height="@dimen/et_height"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/iv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/spinner_right_margin"
                        android:layout_marginRight="@dimen/spinner_right_margin"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_12dp"
                        android:src="@drawable/ic_next_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_income"
                        style="@style/Spinner"
                        android:layout_height="@dimen/et_height"
                        android:overlapAnchor="false"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/iv_income"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:layout_marginRight="19dp"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_12dp"
                        android:src="@drawable/ic_next_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_occupation"
                        style="@style/Spinner"
                        android:layout_height="@dimen/et_height"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/iv_occupation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spinner_right_margin"
                        android:layout_marginRight="@dimen/spinner_right_margin"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:padding="@dimen/dimen_12dp"
                        android:src="@drawable/ic_next_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@color/signup_underline" />

                <EditText
                    android:id="@+id/et_postcode"

                    fontPath="@string/font_sofiapro_light"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:height="@dimen/et_height"
                    android:background="@color/signup_edittext_background"
                    android:hint="@string/Postcode"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/dimen_3dp"
                    android:paddingRight="@dimen/dimen_3dp"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/faint_white"
                    android:textSize="@dimen/dimen_18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="@color/signup_underline" />

                <Button
                    android:id="@+id/btn_update"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_80dp"
                    android:text="@string/update" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

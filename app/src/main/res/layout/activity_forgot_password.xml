<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical">

    <include
        android:id="@+id/forgot_toolbar"
        layout="@layout/layout_toolbar" />


    <EditText
        android:id="@+id/et_forgot_email"
        style="@style/RegisterEditText"
        fontPath="@string/font_sofiapro_light"
        android:layout_below="@id/forgot_toolbar"
        android:layout_marginBottom="@dimen/edittext_bottom_margin"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/dimen_15sp" />


    <Button
        android:id="@+id/btn_submit_email"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_56dp"
        android:text="@string/submit" />


</RelativeLayout>
